<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewUserActivity"
    android:background="@drawable/degradado">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title"
        android:textSize="30sp"
        android:gravity="center"
        android:textColor="@color/Azul"
        android:textStyle="italic|bold"
        android:textAllCaps="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@id/imageView"
        app:layout_constraintVertical_bias="0.45"
        android:layout_marginTop="10sp"
        tools:ignore="SmallSp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/loguito"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.15" />

    <View
        android:id="@+id/view"
        android:layout_width="25dp"
        android:layout_height="300dp"
        android:background="@color/Celeste"
        android:rotation="25"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        android:translationX="-3dp"
        android:translationY="-40dp"/>

    <View
        android:id="@+id/view2"
        android:layout_width="25dp"
        android:layout_height="550dp"
        android:background="@color/Celeste"
        android:rotation="25"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:translationY="-60dp"/>

    <View
        android:id="@+id/view3"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:background="@color/Azul"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.935"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0" />

    <Button
        android:id="@+id/Ingresar"
        android:layout_width="160dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/view3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.9"
        android:text="REGISTRAR"
        android:textSize="15dp"
        android:paddingStart="20dp"
        android:gravity="fill"
        android:backgroundTint="@color/Azul"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="249dp"
        android:layout_height="40dp"
        android:text="Crea un nombre de usuario:"
        android:background="@color/Azul"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/Usuario"
        app:layout_constraintEnd_toStartOf="@id/view3"
        android:layout_marginBottom="10dp"
        />

    <EditText
        android:id="@+id/Usuario"
        android:layout_width="249dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/view3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.62"
        android:ems="12"
        android:background="@color/Manteca"
        android:inputType="text"
        android:hint="Usuario"
        android:textColorHint="@color/Plomo"
        android:paddingStart="5dp"
        android:textColor="@color/black"
        tools:ignore="MissingConstraints,RtlHardcoded,RtlSymmetry" />

    <TextView
        android:layout_width="249dp"
        android:layout_height="40dp"
        android:text="Crea una contraseña:"
        android:background="@color/Azul"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/Password"
        app:layout_constraintEnd_toStartOf="@id/view3"
        android:layout_marginBottom="10dp"
        />

    <EditText
        android:id="@+id/Password"
        android:layout_width="249dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/view3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8"
        android:ems="12"
        android:background="@color/Manteca"
        android:inputType="textPassword"
        android:hint="Contraseña"
        android:textColorHint="@color/Plomo"
        android:paddingStart="5dp"
        android:textColor="@color/black"
        tools:ignore="MissingConstraints,RtlSymmetry" />
</androidx.constraintlayout.widget.ConstraintLayout>