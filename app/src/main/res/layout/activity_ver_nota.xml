<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerNotaActivity"
    android:background="@drawable/degradado">

    <TextView
        android:id="@+id/CourseName"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Nombre del curso"
        android:background="@drawable/titulo_curso"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_margin="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/back"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:paddingStart="15dp"
        android:paddingTop="5dp"
        tools:ignore="MissingConstraints,RtlSymmetry"
        android:src="@drawable/back"
        android:scaleType="centerCrop"
        android:background="@android:color/transparent"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="@color/Azul"
        app:layout_constraintTop_toBottomOf="@id/CourseName"
        android:layout_marginTop="15dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/NotaName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@drawable/subtitulo"
        android:text="   Name"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/CourseName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="15dp"/>

    <ScrollView
        android:id="@+id/Scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="140dp"
        android:layout_marginBottom="110dp"
        android:orientation="vertical"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/titulo_curso"
        android:padding="10dp">

        <EditText
            android:id="@+id/NotaText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/Puntitos"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:background="@color/Manteca"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:scrollbars="vertical"/>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/Scroll"
        android:layout_margin="15dp">

        <Button
            android:id="@+id/EliminarNota"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/Azul"
            android:text="Eliminar Nota"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/GuardarNota"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/Azul"
            android:text="Guardar Nota"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>