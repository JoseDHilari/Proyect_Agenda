<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalendarioActivity"
    android:background="@drawable/degradado">
    <TextView
        android:id="@+id/CourseName"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Mes"
        android:background="@color/Manteca"
        android:textColor="@color/Plomo"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_margin="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/back"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:paddingStart="15dp"
        android:paddingTop="5dp"
        tools:ignore="MissingConstraints,RtlSymmetry"
        android:src="@drawable/back"
        android:scaleType="centerCrop"
        android:background="@android:color/transparent"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="@color/Azul"
        app:layout_constraintTop_toBottomOf="@id/CourseName"
        android:layout_marginTop="15dp"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="0dp">

        <CalendarView
            android:id="@+id/Calendario"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="100dp"
            android:layout_weight="5"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="20dp"
            android:layout_weight="0.6"
            android:background="@color/Azul"
            android:padding="5dp"
            android:text="ACTIVIDADES DEL MES:"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/Calendario" />

        <FrameLayout
            android:id="@+id/LisRecordView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="4"
            android:background="@color/Manteca"
            app:layout_constraintTop_toBottomOf="@id/Calendario">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:background="@color/Amarillo_Fondo"
                tools:ignore="MissingConstraints">

                <ListView
                    android:id="@+id/LisHorario"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></ListView>
            </ScrollView>
        </FrameLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

