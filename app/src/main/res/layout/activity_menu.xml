<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity"
    android:background="@drawable/degradado">

    <TextView
        android:id="@+id/CourseName"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Nombre del curso"
        android:background="@color/Manteca"
        android:textColor="@color/Plomo"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_margin="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/back"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:paddingStart="15dp"
        android:paddingTop="5dp"
        tools:ignore="MissingConstraints,RtlSymmetry"
        android:src="@drawable/back"
        android:scaleType="centerCrop"
        android:background="@android:color/transparent"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="@color/Azul"
        app:layout_constraintTop_toBottomOf="@id/CourseName"
        android:layout_marginTop="15dp"
        tools:ignore="MissingConstraints" />
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="530dp"
        android:columnCount="2"
        android:rowCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="15dp"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:id="@+id/Recordatorios"
            android:layout_width="180dp"
            android:layout_height="240dp"
            android:orientation="vertical"
            android:background="@color/Celeste"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/clock"
                android:background="@android:color/transparent" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Recordatorios:"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/Notas"
            android:layout_width="180dp"
            android:layout_height="240dp"
            android:orientation="vertical"
            android:background="@color/Celeste">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/note"
                android:background="@android:color/transparent" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Notas:"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/Multimedia"
            android:layout_width="180dp"
            android:layout_height="240dp"
            android:orientation="vertical"
            android:background="@color/Celeste">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/media"
                android:background="@android:color/transparent" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Multimedia:"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/Archivos"
            android:layout_width="180dp"
            android:layout_height="240dp"
            android:orientation="vertical"
            android:background="@color/Celeste">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/file"
                android:background="@android:color/transparent" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Archivos:"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"/>
        </LinearLayout>
    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>